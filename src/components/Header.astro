---
import Icon from './Icon.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Accueil' },
  { href: '/studio', label: 'Le Studio' },
  { href: '/startups', label: 'Startups' },
  { href: '/entreprises', label: 'Entreprises' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/contact', label: 'Contact' },
];
---

<a href="#main-content" class="skip-link">Aller au contenu principal</a>
<header class="fixed top-0 left-0 right-0 z-50 glass-dark border-b border-slate-800/50 noise-dark">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-display font-bold gradient-text-dark text-glow">D11N</a>
      
      <ul class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class={`text-sm font-medium transition-colors hover:text-white ${
                currentPath === item.href ? 'text-[#818CF8]' : 'text-slate-400'
              }`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <button 
        class="md:hidden text-slate-400 hover:text-white transition-colors" 
        id="mobile-menu-toggle"
        aria-label="Ouvrir le menu de navigation"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <Icon name="menu" ariaLabel="Menu de navigation" />
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="hidden md:hidden mt-4 pt-4 border-t border-slate-800" id="mobile-menu">
      <ul class="space-y-4">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class={`block text-sm font-medium transition-colors hover:text-white ${
                currentPath === item.href ? 'text-[#818CF8]' : 'text-slate-400'
              }`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  
  toggle?.addEventListener('click', () => {
    const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', (!isExpanded).toString());
    toggle.setAttribute('aria-label', isExpanded ? 'Ouvrir le menu de navigation' : 'Fermer le menu de navigation');
    menu?.classList.toggle('hidden');
  });
</script>