---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';

const enginePrinciples = [
  {
    title: "Vélocité Radicale",
    icon: "rocket",
    description: "3 mois au lieu de 2 ans. Nous court-circuitons le superflu.",
    details: ["Exécution parallèle", "Décisions data-driven", "Processus industrialisé"],
  },
  {
    title: "IA Multi-Modèles", 
    icon: "chip",
    description: "Claude, GPT, Gemini : nous utilisons toute la puissance disponible.",
    details: ["Analyse de marché augmentée", "Génération de contenu", "Automatisation intelligente"],
  },
  {
    title: "Traction First",
    icon: "chart",
    description: "Nous validons avant de construire. Toujours.",
    details: ["Tests marché rapides", "Metrics en temps réel", "Pivot data-driven"],
  },
  {
    title: "Exécution 360°",
    icon: "globe",
    description: "De l'idée au revenue. Nous gérons tout.",
    details: ["Tech complète", "Marketing & vente", "Opérations & scale"],
  }
];

const stats = [
  { value: "90", unit: "jours", label: "De l'idée au MVP" },
  { value: "85", unit: "%", label: "Taux de validation marché" },
  { value: "4x", unit: "", label: "Vélocité vs. méthodes traditionnelles" },
];
---

<BaseLayout title="Accueil">
  <Header />
  
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative flex items-center justify-center overflow-hidden bg-slate-950">
      <div class="absolute inset-0 bg-gradient-to-b from-[#818CF8]/10 to-transparent"></div>
      
      <div class="container mx-auto px-6 py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-display font-bold leading-tight mb-6 animate-slide-up">
            De l'Idée à la <span class="gradient-text-dark">Traction</span>. Industrialisé.
          </h1>
          
          <p class="text-xl text-slate-400 mb-12 max-w-2xl mx-auto animate-slide-in stagger-2">
            Le startup studio qui utilise l'IA, l'automatisation et l'industrialisation pour construire des entreprises, pas juste des projets.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/contact" size="lg" class="animate-slide-up" style="animation-delay: 0.3s">
              Démarrer un projet
            </Button>
            <Button href="/studio" variant="outline" size="lg" class="animate-slide-up" style="animation-delay: 0.4s">
              Découvrir notre méthode
            </Button>
          </div>
        </div>
      </div>

      <!-- Animated orbs -->
      <div class="absolute top-1/4 -left-48 w-96 h-96 bg-gradient-to-br from-[#818CF8]/20 to-transparent rounded-full blur-3xl animate-float-glow"></div>
      <div class="absolute bottom-1/4 -right-48 w-96 h-96 bg-gradient-to-br from-[#A78BFA]/20 to-transparent rounded-full blur-3xl animate-float-glow" style="animation-delay: 2s;"></div>
    </section>


    <!-- Stats Section -->
    <section class="py-20 relative overflow-hidden bg-slate-950">
      <div class="absolute inset-0 bg-gradient-to-b from-[#818CF8]/5 via-transparent to-[#A78BFA]/5"></div>

      <div class="container mx-auto px-6 py-32 relative z-20">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-display font-bold mb-4 text-white">
            Notre Impact en <span class="gradient-text-dark">Chiffres</span>
          </h2>
          <p class="text-slate-400 text-lg">
            Des résultats concrets, mesurables et reproductibles
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {stats.map((stat, index) => (
            <div class="text-center animate-slide-in" style={`animation-delay: ${index * 0.1}s`}>
              <div class="text-4xl md:text-5xl font-display font-bold mb-2">
                <span class="gradient-text-dark">{stat.value}</span>
                <span class="text-2xl md:text-3xl text-slate-600">{stat.unit}</span>
              </div>
              <p class="text-slate-500 text-sm">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Methodology Section -->
    <section class="py-24 bg-slate-900">
      <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-5xl font-display font-bold mb-4">
            Le Moteur <span class="gradient-text-dark">D11N</span>
          </h2>
          <p class="text-xl text-slate-400 max-w-2xl mx-auto">
            Notre philosophie : utiliser toute la technologie disponible pour construire des entreprises, pas des projets.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
          {enginePrinciples.map((principle, index) => (
            <div class="relative animate-slide-in" style={`animation-delay: ${index * 0.1}s`}>
              <Card 
                glowEffect={true}
                class="h-full"
              >
                <div class="flex items-center mb-4">
                  <Icon name={principle.icon} class="text-[#818CF8] mr-3" size="lg" />
                  <h3 class="text-xl font-bold text-white">{principle.title}</h3>
                </div>
                
                <p class="text-slate-300 mb-4">
                  {principle.description}
                </p>
                
                <ul class="space-y-2">
                  {principle.details.map((detail) => (
                    <li class="text-sm text-slate-400 flex items-start">
                      <Icon name="check" class="text-[#67E8F9] mr-2 flex-shrink-0 mt-0.5" size="sm" />
                      {detail}
                    </li>
                  ))}
                </ul>
              </Card>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Two Approaches Section -->
    <section class="py-24 bg-slate-950">
      <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-5xl font-display font-bold mb-4">
            Deux Approches. <span class="gradient-text-dark">Une Obsession</span>.
          </h2>
          <p class="text-xl text-slate-400 max-w-2xl mx-auto">
            Nous adaptons notre méthodologie à votre contexte. Startup ou entreprise, l'objectif reste le même : la traction.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          <!-- Launchpad -->
          <div class="card-dark p-8 hover-lift-dark">
            <div class="mb-6">
              <Icon name="rocket" class="text-[#818CF8] mb-4" size="xl" />
              <h3 class="text-2xl font-bold text-white mb-2">Launchpad</h3>
              <p class="text-[#67E8F9] font-semibold">Pour les Startups</p>
            </div>
            
            <p class="text-slate-300 mb-6">
              <span class="font-semibold text-white">Le Cheval de Troie.</span> Nous infiltrons votre marché avec un outil gratuit irrésistible avant de déployer votre offre complète.
            </p>
            
            <div class="space-y-3 mb-6">
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">DECODE : Trouver le bon Cheval</span>
              </div>
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">DESIGN : Forger l'outil parfait</span>
              </div>
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">DEPLOY : Campagne de guérilla</span>
              </div>
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">DRIVE : Convertir en clients</span>
              </div>
            </div>
            
            <a href="/startups" class="inline-flex items-center text-[#818CF8] hover:text-[#A78BFA] transition-colors">
              Découvrir le Launchpad <Icon name="arrow-right" class="ml-2" size="sm" />
            </a>
          </div>

          <!-- Innovation Strike Team -->
          <div class="card-dark p-8 hover-lift-dark">
            <div class="mb-6">
              <Icon name="lightning-bolt" class="text-[#818CF8] mb-4" size="xl" />
              <h3 class="text-2xl font-bold text-white mb-2">Innovation Strike Team</h3>
              <p class="text-[#67E8F9] font-semibold">Pour les Entreprises</p>
            </div>
            
            <p class="text-slate-300 mb-6">
              <span class="font-semibold text-white">Le Commando.</span> Nous livrons des business units opérationnelles en 3 mois, pas des PowerPoints.
            </p>
            
            <div class="space-y-3 mb-6">
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">Traction Report (2-3 semaines)</span>
              </div>
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">Sprint MVP (90 jours)</span>
              </div>
              <div class="flex items-center">
                <Icon name="chevron-right" class="text-[#67E8F9] mr-2" size="sm" />
                <span class="text-sm text-slate-400">Handover & Scale</span>
              </div>
            </div>
            
            <a href="/entreprises" class="inline-flex items-center text-[#818CF8] hover:text-[#A78BFA] transition-colors">
              Découvrir Strike Team <Icon name="arrow-right" class="ml-2" size="sm" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Simple CTA Section -->
    <section class="py-20 bg-slate-900">
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">
            Prêt à Démarrer ?
          </h2>
          <p class="text-xl text-slate-400 mb-8">
            4 questions. 48h de réponse. Zéro blabla.
          </p>
          <Button href="/contact" size="lg" class="animate-pulse-subtle">
            Démarrer la conversation →
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Intersection Observer for fade-in animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  // Observe all elements with fade-in-on-scroll class
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-on-scroll');
    fadeElements.forEach(el => observer.observe(el));
  });
</script>
